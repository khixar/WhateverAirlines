<%= form_tag(static_pages_create_path, :method => 'post') do %>

	<div class="login-wrap">
        <div class="login-html">
            <input id="tab-1" type="radio" name="tab" class="sign-in" checked>
            <label for="tab-1" class="tab">Add Personal Information
            </label>
            <input id="tab-2" type="radio" name="tab" class="sign-up"><label for="tab-2" class="tab" style="visibility: hidden;">Sign Up</label>
            <div class="login-form">
                <div class="sign-in-htm">
                    <div class="group">             
                        <%= label_tag :name, :name, :class => "label" %>
						<%= text_field_tag :name, params[:name].try(:html_safe), :class => "input" %>
                    </div>
                    <div class="group">     
						<%= label_tag :email, :email, :class => "label" %>
						<td><%= text_field_tag :email, params[:email].try(:html_safe), :class => "input" %></td>
                    </div>
                    <div class="group" style="text-align: center;">
                        <%= submit_tag "Submit", :onclick => "return ValidateForm();" %>
                    </div>
                </div>
            </div>
        </div>
    </div>

<% end %>






<%= form_tag(airline_admin_index_path, :method => 'post') do %>
	<div class="login-wrap">
		<div class="login-html">
			<input id="tab-1" type="radio" name="tab" class="sign-in" checked>
			<label for="tab-1" class="tab">Admin Login
			</label>
			<input id="tab-2" type="radio" name="tab" class="sign-up"><label for="tab-2" class="tab" style="visibility: hidden;">Sign Up</label>
			<div class="login-form">
				<div class="sign-in-htm">
					<div class="group">				
						<%= label_tag :username, :username, :class => "label" %>
						<%= text_field_tag :username, params[:username].try(:html_safe), :class => "input" %>
					</div>
					<div class="group">		
						<%= label_tag :password, :password, :class => "label" %>
						<%= password_field_tag :password, params[:password].try(:html_safe), :class => "input" %>
					</div>

					<div class="group" style="text-align: center;">
						<%= submit_tag("Login") %>
					</div>


					<div class="hr"></div>
					<div class="foot-lnk">
						<a href="#forgot">Forgot Password?</a>
					</div>
				</div>
			</div>
		</div>
	</div>
<% end %>



